<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonatantierno.trellotimer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TTApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".configscreens.SelectBoardActivity"
            android:label="@string/title_activity_config"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".configscreens.SelectListsActivity"
            android:label="@string/title_activity_config"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".tasksscreen.TasksActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_tasks" >
        </activity>
        <activity
            android:name=".timerscreen.TimerActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_timer" >
        </activity>
    </application>

</manifest>
